{
  "extends": ["airbnb-base"],
  "parserOptions": { "ecmaVersion": 6 },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"],
        "moduleDirectory": ["node_modules"]
      }
    }
  },
  "rules": {
    "import/no-unresolved": "off",
    "no-console": "off"
  }
}
